                <Font size="20.0"/>
            </font>
            <graphic>
                <ImageView fitHeight="98.0" fitWidth="289.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@../../resources/ui/button_confirm@2x.png"/>
                    </image>
                </ImageView>
            </graphic>
        </Button>
