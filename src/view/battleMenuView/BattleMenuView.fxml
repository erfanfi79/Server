                                <ImageView fitHeight="80.0" fitWidth="268.0" pickOnBounds="true" preserveRatio="true">
                                    <image>
                                        <Image url="@../../resources/ui/button_primary_middle_glow.png"/>
                                    </image>
                                </ImageView>
                            </graphic>
                            <font>
                                <Font size="18.0"/>
                            </font>
                        </Button>
                        <TextField fx:id="flagsNum" layoutX="260.0" layoutY="269.0" prefHeight="32.0"
