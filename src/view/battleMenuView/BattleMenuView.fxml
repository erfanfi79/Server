                textFill="WHITE">
            <graphic>
                <ImageView fitHeight="98.0" fitWidth="289.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@../../resources/ui/button_confirm@2x.png"/>
                    </image>
                </ImageView>
            </graphic>
            <font>
                <Font size="20.0"/>
            </font>
        </Button>
        <Button fx:id="btnMultiPlayer" contentDisplay="CENTER" layoutX="28.0" layoutY="493.0" mnemonicParsing="false"
