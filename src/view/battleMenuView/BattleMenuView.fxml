                            <graphic>
                                <ImageView fitHeight="101.0" fitWidth="352.0" pickOnBounds="true" preserveRatio="true">
                                    <image>
                                        <Image url="@../../resources/ui/button_primary_middle_glow.png"/>
                                    </image>
                                </ImageView>
                            </graphic>
                        </Button>
