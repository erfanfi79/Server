                                <ToggleGroup fx:id="mode"/>
                            </toggleGroup>
                            <font>
                                <Font size="18.0"/>
                            </font>
                        </RadioButton>
                        <RadioButton fx:id="radioMode2" layoutX="65.0" layoutY="172.0" mnemonicParsing="false"
